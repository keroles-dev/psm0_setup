# Aliases

# Genral
alias xc='xclip'
alias xcs='xclip -selection clipboard'
alias c='clear'
alias h='cd ~'
alias d='cd ~/dev'
alias z='zsh'
alias b='bash'
alias v='vim '
alias l='ls'
alias ll='ls -lh'
alias lll='ls -lah'

# Packages
alias q='doas pacman -Q'
alias u='doas pacman -Syu'
alias i='doas pacman -S'
alias r='doas pacman -Runc'

# Env
alias flutter2='/home/keroles/flutter_v2/bin/flutter'
alias flutter3='/home/keroles/flutter_v3/bin/flutter'

# Script
alias android-studio="nohup /home/keroles/android-studio/bin/studio.sh &;disown;"

# Git
alias g='git'
alias gs='git status'
alias gl="git log --graph --pretty=format:'%C(yellow)%d%Creset %C(cyan)%h%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short --all"
alias gac='git add . && git commit -m '
alias ga='git add '
alias gc='git commit -m '

# Docker
alias drm='docker rm -f '
alias dl='docker logs '

# ADB connect to device
alias adb-connect="adb kill-server && adb tcpip 5555 && adb connect"

# Services
alias run-srv="doas systemctl start httpd"
alias srv-conf="doas vim /etc/httpd/conf/httpd.conf"
alias run-docker="doas systemctl start docker.service"
